<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
>

    <CheckBox
            android:id="@+id/checkBoxDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

    <TextView
            android:id="@+id/textViewTaskDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/checkBoxDone"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
    />

    <TextView
            android:id="@+id/textViewTaskDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTaskDescription"
            android:layout_toEndOf="@+id/checkBoxDone"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="#FF0000FF" />

    <TextView
            android:id="@+id/textViewTaskClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxDone"
            android:textColor="#339933" />

    <Button
            android:id="@+id/btnDeleteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#E57373"/>


    <Button
            android:id="@+id/btnEditItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_toStartOf="@id/btnDeleteItem"/>



</RelativeLayout>
